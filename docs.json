{
    "$schema": "https://mintlify.com/schema.json",
    "name": "Homepal",
    "description": "API-documentation for Homepal third-party applications",
    "theme": "mint",
    "colors": {
        "primary": "#f0fdf4"
    },
    "logo": {
        "dark": "icon.svg",
        "light": "icon.svg"
    },
    "favicon": {
        "dark": "favicon.ico",
        "light": "favicon.ico"
    },
    "appearance": {
        "default": "dark",
        "strict": true
    },
    "navigation": {
        "groups": [
            {
                "group": "Guide",
                "expanded": true,
                "pages": [
                    "Intro",
                    "Concepts",
                    "Raw widgets"
                ]
            },
            {
                "group": "API Reference",
                "expanded": true,
                "openapi": "swagger.json"
            }
        ]
    },
    "api": {
        "playground": {
            "display": "simple"
        }
    }
}